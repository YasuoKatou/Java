<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yksolution.demo.dao.UserMasterDao">

  <resultMap id="userMasterEntity" type="yksolution.demo.entity.UserMasterEntity" autoMapping="true"/>

  <select id="findUser" resultMap="userMasterEntity">
    select
       user_id userId
      ,passwd passwd
      ,authority authority
    from demo_user
    where user_id = #{userId}
  </select>
</mapper>